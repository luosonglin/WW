<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="@null"
    app:cardPreventCornerOverlap="true">
    <!--app:cardUseCompatPadding="true"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="推荐客户A给销售B"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:text="2016.10.21"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/accept_status_btn"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/textview_side_blue"
            android:gravity="center"
            android:text="对方已接受"
            android:textColor="@color/deepskyblue"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/reject_status_btn"
            android:layout_width="85dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/textview_radius_grey"
            android:gravity="center"
            android:text="对方已拒绝"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/accept_btn"
            android:layout_width="45dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/reject_btn"
            android:background="@drawable/textview_all_blue"
            android:gravity="center"
            android:text="接受"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/reject_btn"
            android:layout_width="45dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/textview_radius_grey"
            android:gravity="center"
            android:text="拒绝"
            android:textColor="@color/black"
            android:textSize="14sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
